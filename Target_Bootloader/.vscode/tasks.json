{
	"version": "2.0.0",
	"tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake .. && make",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmake .. && make clean",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
	]
}